<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:id="@+id/android_custom_gridview_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@android:color/white">

    <Space
        android:layout_width="1dp"
        android:layout_height="100dp"/>


    <FrameLayout android:id="@+id/frame"
        android:layout_width="300dp"
        android:layout_height="300dp">

        <ImageView android:id="@+id/pic"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/me" />

        <ImageView android:id="@+id/circle_crop"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/circle" />

    </FrameLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Николай Константинов"
        android:textColor="#0A2A29"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="theManWithoutQualities"
        android:textColor="#0A2A29"
        android:textSize="30sp" />
    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        tools:text="current version"
        android:textColor="#0A2A29"
        android:textSize="30sp" />
</LinearLayout>